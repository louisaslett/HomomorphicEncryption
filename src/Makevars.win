WINLIBS = ../windows
PKG_CPPFLAGS = -I$(WINLIBS)/include -I$(WINLIBS)/include/flint -D __WINDOWS__

PKG_LIBS = -L${WINLIBS}/lib -lflint -L$(LIB_MPFR)/lib -lmpfr -L$(LIB_GMP)/lib -lgmp 

all: clean winlibs

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R"

clean:
	rm -f $(SHLIB) $(OBJECTS)
